{{#each randomBeer}}
<div class='container'>
    <img class='imgbeers' src={{this.image_url}} />
    <div>
        <h1>{{this.name}}</h1>
        <h2>{{this.tagline}}</h2>
        <p>{{this.description}}</p>
        <h4>Food Pairing</h4>
        <p>{{this.food_pairing}}</p>
        <h4>Brewers Tips</h4>
        <p>{{this.brewers_tips}}</p>
    </div>
</div>
{{/each}}